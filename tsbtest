-- SNIPPET 5/5 : ESP, Utilities, Callbacks and Cleanup
-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•

-- ESP System
local ESPEnabled = true
local ESPFolder = Instance.new("Folder", workspace)
ESPFolder.Name = "CPS_ESP"
local espCache = {}

local function getOrCreateESP(plr)
    if espCache[plr] then
        if espCache[plr].Highlight and espCache[plr].Highlight.Parent then
            return espCache[plr].Highlight, espCache[plr].Box
        end
    end
    local highlight = Instance.new("Highlight")
    highlight.Adornee = plr.Character
    highlight.FillColor = Color3.fromRGB(0, 255, 0)
    highlight.FillTransparency = 0.5
    highlight.OutlineTransparency = 0
    highlight.OutlineColor = Color3.fromRGB(255, 255, 255)
    highlight.Parent = ESPFolder
    local box = Instance.new("SelectionBox")
    box.Adornee = plr.Character and plr.Character:FindFirstChild("HumanoidRootPart")
    box.Color3 = Color3.fromRGB(0, 255, 0)
    box.LineThickness = 0.05
    box.SurfaceTransparency = 0.8
    box.Parent = ESPFolder
    espCache[plr] = {Highlight = highlight, Box = box}
    return highlight, box
end

local function clearESP(plr)
    if espCache[plr] then
        if espCache[plr].Highlight then espCache[plr].Highlight:Destroy() end
        if espCache[plr].Box then espCache[plr].Box:Destroy() end
        espCache[plr] = nil
    end
end

local ESPUpdateInterval = 0.3
local ESPAccumulator = 0

RunService.Heartbeat:Connect(function(dt)
    if not ESPEnabled then return end
    ESPAccumulator = ESPAccumulator + dt
    if ESPAccumulator < ESPUpdateInterval then return end
    ESPAccumulator = 0
    for _, plr in pairs(Players:GetPlayers()) do
        if plr ~= LocalPlayer and plr.Character and plr.Character.Parent == workspace and plr.Character:FindFirstChild("HumanoidRootPart") then
            local highlight, box = getOrCreateESP(plr)
            if highlight then highlight.Adornee = plr.Character end
            if box then box.Adornee = plr.Character.HumanoidRootPart end
        else
            clearESP(plr)
        end
    end
end)
Players.PlayerRemoving:Connect(clearESP)

