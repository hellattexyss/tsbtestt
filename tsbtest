    if plr == LocalPlayer then
        for player, _ in pairs(espCache) do clearESP(player) end
        clearCamlockPC()
        clearCamlockMobile()
        if ESPFolder then ESPFolder:Destroy() end
        if camlockGui then camlockGui:Destroy() end
    end
end)

